---
import Breadcrumbs from "@/components/ui-astro/Breadcrumbs.astro";
import { humanize } from "@/lib/utils/textConverter";

const { title = "" }: { title?: string } = Astro.props;
---

<section>
  <div class="mx-auto text-center">
    <div class="bg-primary/10 items-center py-8">
      <div class="flex flex-col items-center justify-center">
        <h1
          class="font-lexend text-primary my-4 w-fit scroll-mt-24 text-6xl font-semibold"
          set:text={humanize(title)}
        />
      </div>
      <Breadcrumbs className="not-prose mt-6" />
    </div>
  </div>
</section>
