---
import type { Headline as Props } from "@/types.d.ts";
import { cn } from "@/lib/utils.ts";

const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("subtitle"),
  tagline,
  classes = {},
} = Astro.props;

const {
  container: containerClass = "max-w-3xl",
  title: titleClass = "text-3xl md:text-4xl ",
  subtitle: subtitleClass = "text-xl",
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div
      class={cn(
        "prose dark:prose-invert mb-8 text-center md:mx-auto md:mb-12",
        containerClass,
      )}
    >
      {tagline && (
        <p
          class="text-base font-bold tracking-wide uppercase"
          set:html={tagline}
        />
      )}
      {title && (
        <h2
          class={cn(
            "leading-tighter font-heading text-heading text-3xl font-bold tracking-tighter",
            titleClass,
          )}
          set:html={title}
        />
      )}

      {subtitle && <p class={cn("mt-4", subtitleClass)} set:html={subtitle} />}
    </div>
  )
}
