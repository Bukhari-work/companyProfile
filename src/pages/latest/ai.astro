---
import Main from "@/layouts/Main.astro";
import PageHeader from "@/components/blocks/PageHeader.astro";
import DynamicIcon from "@/components/blocks/DynamicIcon.tsx";
import Button from "@/components/ui-astro/Button.astro";
import SpeakerCard from "@/components/blocks/SpeakerCard.astro";

import QrCode from "@/assets/qr-code.jpg";
import { Image } from "astro:assets";

// Import speaker images
import Speaker1Image from "@/assets/speaker-ai-1.webp";
import Speaker2Image from "@/assets/speaker-ai-2.webp";
import Speaker3Image from "@/assets/speaker-ai-3.webp";

// Content for SEO and Header
const content = {
  title: "Workshop Literasi AI Data Sampel BPJS Kesehatan",
  description:
    "Workshop ini dirancang untuk memperkenalkan peserta pada konsep dasar literasi AI, teknik pengolahan data sampel BPJS Kesehatan, serta strategi menyusun publikasi ilmiah yang relevan.",
};

// Speaker data array
const speakers = [
  {
    name: "Prof. Dr. Dra. Dumilah Ayuningtyas, M.A.R.S.",
    title: "Guru Besar dan Dosen FKM Universitas Indonesia",
    image: {
      src: Speaker1Image,
      alt: "Prof. Dr. Dra. Dumilah Ayuningtyas, M.A.R.S.",
    },
  },
  {
    name: "dr. R.A.A. Koesoema Wijaya, M.Sc.",
    title:
      "Dokter Ahli Muda & Kepala Satuan Pengawas Internal Puskesmas Kep. Seribu Utara",
    image: {
      src: Speaker2Image,
      alt: "dr. R.A.A. Koesoema Wijaya, M.Sc.",
    },
  },
  {
    name: "Syarif Rahman Hasibuan, S.K.M., M.K.M.",
    title: "Dosen FK UPN Veteran Jakarta & Peneliti CHAMPS UI",
    image: {
      src: Speaker3Image,
      alt: "Syarif Rahman Hasibuan, S.K.M., M.K.M.",
    },
  },
];

// Data for enhanced sections
const takeaways = [
  "Memahami dasar-dasar literasi AI dan etika data kesehatan.",
  "Mempelajari langkah-langkah mengakses dan mengolah Data Sampel BPJS Kesehatan.",
  "Mengetahui strategi penyusunan publikasi ilmiah berbasis data sekunder.",
  "Meningkatkan kemampuan analisis dan interpretasi data untuk riset berkualitas tinggi.",
  "Membangun jejaring dengan peneliti, akademisi, dan praktisi kesehatan.",
];

const audience = [
  "Peneliti dan Akademisi yang ingin memperkuat kapasitas riset.",
  "Mahasiswa D3, D4, S1, S2, dan S3 di bidang kesehatan atau terkait.",
  "Praktisi Kesehatan yang ingin memanfaatkan data untuk keputusan berbasis bukti.",
  "Profesional dan Enthusiast Teknologi yang tertarik pada penerapan AI di bidang kesehatan.",
];
---

<Main {content} makara>
  <PageHeader
    title={content.title}
    breadcrumbs={false}
    headtitle="Center for Health Administration and Policy Studies, Faculty of Public Health, Universitas Indonesia"
  />

  <section
    class="relative mx-auto max-w-7xl gap-8 p-4 pb-24 lg:grid lg:grid-cols-3"
  >
    <div class="lg:col-span-2">
      <article class="mt-8 space-y-12">
        <div
          class="not-prose bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="about"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon icon="LuInfo" className="text-primary size-6" />
            <span>Tentang Workshop</span>
          </h2>
          <div class="prose dark:prose-invert mt-4 max-w-none space-y-4">
            <p>
              Di era digital saat ini, kemampuan memanfaatkan kecerdasan buatan
              (AI) dan data sekunder secara etis dan efektif menjadi kunci untuk
              menghasilkan publikasi ilmiah yang berkualitas tinggi.
            </p>
            <p>
              Workshop ini dirancang untuk memperkenalkan peserta pada konsep
              dasar literasi AI, teknik pengolahan data sampel BPJS Kesehatan,
              serta strategi menyusun publikasi ilmiah yang relevan dengan
              isu-isu kesehatan nasional. Melalui sesi interaktif dan praktik
              langsung, peserta akan memahami bagaimana AI dan big data dapat
              digunakan untuk meningkatkan kualitas penelitian kesehatan
              masyarakat.
            </p>
          </div>

          <div class="border-primary bg-primary/10 mt-8 rounded-xl border p-6">
            <h3
              id="objectives"
              class="prose dark:prose-invert flex items-center gap-3 text-xl font-bold"
            >
              <DynamicIcon icon="FaListCheck" className="text-primary size-5" />
              <span>Luaran Peserta</span>
            </h3>
            <p class="prose dark:prose-invert mt-2 max-w-none">
              Setelah mengikuti workshop ini, peserta akan dapat:
            </p>
            <div class="mt-4 grid gap-3 sm:grid-cols-1">
              {
                takeaways.map((item) => (
                  <div class="flex items-start gap-3">
                    <DynamicIcon
                      icon="FaRegCircleCheck"
                      className="text-primary mt-1.5 size-4 flex-shrink-0"
                    />
                    <p class="m-0 text-base">{item}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <div
          class="not-prose bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="audience"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon icon="LuUsers" className="text-primary size-6" />
            <span>Siapa Saja yang Dapat Bergabung</span>
          </h2>
          <div class="mt-4 grid gap-4">
            {
              audience.map((item) => (
                <div class="flex items-start gap-4">
                  <DynamicIcon
                    icon="LuUserCheck"
                    className="text-primary mt-1 size-5 flex-shrink-0"
                  />
                  <p class="m-0">{item}</p>
                </div>
              ))
            }
          </div>
          <div
            class="border-primary bg-primary/10 mt-6 flex items-center gap-3 rounded-lg border p-4"
          >
            <DynamicIcon icon="LuLanguages" className="size-6 flex-shrink-0" />
            <p class="m-0 text-sm">
              Workshop akan dibawakan dalam <strong>Bahasa Indonesia</strong>.
            </p>
          </div>
          <div
            class="border-primary bg-primary/10 mt-4 flex items-center gap-3 rounded-lg border p-4"
          >
            <DynamicIcon
              icon="LuClipboardCheck"
              className="size-6 flex-shrink-0"
            />
            <p class="m-0 text-sm">
              Peserta diharapkan sudah menginstal aplikasi <strong>SPSS</strong
              >.
            </p>
          </div>
        </div>

        <div
          class="bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="speakers"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon
              icon="LuSquareUserRound"
              className="text-primary size-6"
            />
            <span>Narasumber</span>
          </h2>
          <div
            class="not-prose mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
          >
            {
              speakers.map((speaker) => (
                <SpeakerCard
                  name={speaker.name}
                  title={speaker.title}
                  image={speaker.image}
                />
              ))
            }
          </div>
        </div>
      </article>
    </div>

    <aside class="lg:col-span-1">
      <div
        class="bg-background dark:shadow-primary/20 top-24 mt-8 w-full rounded-xl border p-6 font-light shadow-xl lg:sticky"
      >
        <h3 class="mb-4 text-xl font-bold">Detail Workshop</h3>
        <ul class="mb-4 space-y-3">
          <li class="flex items-center gap-3">
            <DynamicIcon
              icon="LuPresentation"
              className="text-primary h-5 w-5"
            />
            <span>Workshop luring interaktif (full-day)</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuCalendar" className="text-primary h-5 w-5" />
            <span>Kamis, 30 Oktober 2025</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuClock" className="text-primary h-5 w-5" />
            <span>08.00 â€“ 16.40 WIB</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuMapPin" className="text-primary h-5 w-5" />
            <span>Universitas Diponegoro, Semarang</span>
          </li>
        </ul>

        <h4 class="mt-8 mb-4 text-lg font-semibold">Biaya Investasi</h4>
        <div class="space-y-3">
          <div
            class="bg-background flex items-center justify-between rounded-lg border p-4"
          >
            <div>
              <p
                class="flex items-center gap-2 font-bold text-gray-800 dark:text-gray-200"
              >
                <DynamicIcon icon="LuTicket" className="size-4" />
              </p>
            </div>
            <p class="text-primary text-lg font-semibold">Rp. 500.000,-</p>
          </div>
        </div>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">
          <strong>Termasuk</strong>: materi workshop, sertifikat, coffee break,
          dan makan siang.
        </p>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">
          <strong>Tidak termasuk</strong>: akomodasi, perjalanan, dan
          transportasi.
        </p>

        <div class="mt-6 text-center">
          <Button
            href="https://bit.ly/PendaftaranWorkshopPenulisanAI2025"
            target="_blank"
          >
            Daftar Sekarang
          </Button>
          <p class="mt-2 text-sm">Batas Akhir Pendaftaran: 26 Oktober 2025</p>
        </div>
        <Image
          src={QrCode}
          alt="QR Code Pendaftaran Workshop"
          class="mx-auto mt-4 w-48 rounded-lg"
        />
        <div class="mt-6 border-t pt-4 text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400">Narahubung:</p>
          <div class="mt-2 flex flex-col items-center gap-1">
            <a
              href="https://wa.me/6281280426012"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary inline-flex items-center gap-2 transition"
            >
              <DynamicIcon icon="FaWhatsapp" className="size-5" />
              <span class="link">Fadlil (+62 812-8042-6012)</span>
            </a>
            <a
              href="https://wa.me/6283819312825"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary inline-flex items-center gap-2 transition"
            >
              <DynamicIcon icon="FaWhatsapp" className="size-5" />
              <span class="link">Sheila (+62 838-1931-2825)</span>
            </a>
          </div>
        </div>
      </div>
    </aside>
  </section>
</Main>
