---
import Main from "@/layouts/Main.astro";
import PageHeader from "@/components/blocks/PageHeader.astro";
import DynamicIcon from "@/components/blocks/DynamicIcon.tsx";
import Button from "@/components/ui-astro/Button.astro";
import SpeakerCard from "@/components/blocks/SpeakerCard.astro";

import QrCode from "@/assets/qr-code.jpg";
import { Image } from "astro:assets";

// Import speaker images
import Speaker1Image from "@/assets/speaker-sempls-1.webp";
import Speaker2Image from "@/assets/speaker-sempls-2.webp";

// Content for SEO and Header
const content = {
  title: "Workshop SEM-PLS Data Analysis for Health Policy",
  description:
    "Workshop ini dirancang untuk mengembangkan keterampilan peserta dalam menganalisis data menggunakan perangkat lunak SmartPLS, yang memungkinkan pengembangan kebijakan kesehatan berbasis bukti dengan lebih baik.",
};

const speakers = [
  {
    name: "Prof. Dr. Dra. Dumilah Ayuningtyas, MARS",
    title: "Guru Besar Fakultas Kesehatan Masyarakat Universitas Indonesia",
    image: {
      src: Speaker1Image,
      alt: "Prof. Dr. Dra. Dumilah Ayuningtyas, MARS",
    },
  },
  {
    name: "Ira Gustina, S.Stat., M.K.M.",
    title: "Data Analyst, Peneliti CHAMPS",
    image: {
      src: Speaker2Image,
      alt: "Ira Gustina, S.Stat., M.K.M.",
    },
  },
];

// Data for enhanced sections
const takeaways = [
  "Mengembangkan keterampilan analisis data menggunakan perangkat lunak SmartPLS.",
  "Memperoleh pemahaman teoritis dan kemampuan praktis dalam analisis data berbasis SEM-PLS.",
  "Mendukung perumusan kebijakan kesehatan yang lebih baik melalui analisis berbasis bukti.",
];

const audience = [
  "Ahli Kesehatan Masyarakat (Tenaga Kesmas, Epidemiologi, Promkes, Kesehatan Kerja, Sanitasi Lingkungan)",
  "Praktisi Kesehatan (Dokter, Dokter Gigi, Perawat, Bidan, Tenaga Gizi, Psikolog Klinis, Tenaga Farmasi)",
  "Peneliti Kesehatan Masyarakat (Tenaga Perekam Medis dan Informasi Kesehatan)",
  "Pegawai Dinas Kesehatan/Kementerian Kesehatan/NGO/Lembaga lainnya",
  "Mahasiswa (terutama S2/S3) dan masyarakat umum calon pengambil kebijakan berbasis data.",
];
---

<Main {content} makara>
  <PageHeader
    title={content.title}
    headtitle="Center for Health Administration and Policy Studies, Faculty of Public Health, Universitas Indonesia"
    breadcrumbs={false}
  />

  <section
    class="relative mx-auto max-w-7xl gap-8 p-4 pb-24 lg:grid lg:grid-cols-3"
  >
    <div class="lg:col-span-2">
      <article class="mt-8 space-y-12">
        <div
          class="not-prose bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="about"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon icon="LuInfo" className="text-primary size-6" />
            <span>Tentang Workshop</span>
          </h2>
          <div class="prose dark:prose-invert mt-4 max-w-none space-y-4">
            <p>
              Dalam dunia kebijakan kesehatan, pengambilan keputusan berbasis
              bukti (evidence-informed policy) telah menjadi pendekatan
              strategis untuk menghasilkan kebijakan yang relevan dan efektif.
              Data yang komprehensif dan metode analisis yang tepat, seperti
              Structural Equation Modeling - Partial Least Squares (SEM-PLS),
              menjadi kunci dalam memastikan keberhasilan implementasi
              kebijakan.
            </p>
            <p>
              Workshop ini dirancang untuk mengembangkan keterampilan peserta
              dalam menganalisis data menggunakan perangkat lunak SmartPLS.
              Seluruh materi disusun untuk memberikan kombinasi pemahaman
              teoritis dan kemampuan praktis dalam melakukan analisis data
              berbasis SEM-PLS untuk mendukung formulasi kebijakan kesehatan
              yang lebih baik.
            </p>
          </div>

          <div class="border-primary bg-primary/10 mt-8 rounded-xl border p-6">
            <h3
              id="objectives"
              class="prose dark:prose-invert flex items-center gap-3 text-xl font-bold"
            >
              <DynamicIcon icon="FaListCheck" className="text-primary size-5" />
              <span>Luaran Peserta</span>
            </h3>
            <p class="prose dark:prose-invert mt-2 max-w-none">
              Melalui workshop ini, peserta akan:
            </p>
            <div class="mt-4 grid gap-3 sm:grid-cols-1">
              {
                takeaways.map((item) => (
                  <div class="flex items-start gap-3">
                    <DynamicIcon
                      icon="FaRegCircleCheck"
                      className="text-primary mt-1.5 size-4 flex-shrink-0"
                    />
                    <p class="m-0 text-base">{item}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <div
          class="not-prose bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="audience"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon icon="LuUsers" className="text-primary size-6" />
            <span>Sasaran Peserta</span>
          </h2>
          <div class="mt-4 grid gap-4">
            {
              audience.map((item) => (
                <div class="flex items-start gap-4">
                  <DynamicIcon
                    icon="LuUserCheck"
                    className="text-primary mt-1 size-5 flex-shrink-0"
                  />
                  <p class="m-0">{item}</p>
                </div>
              ))
            }
          </div>
          <div
            class="border-primary bg-primary/10 mt-6 flex items-center gap-3 rounded-lg border p-4"
          >
            <DynamicIcon icon="LuLanguages" className="size-6 flex-shrink-0" />
            <p class="m-0 text-sm">
              Workshop akan dibawakan dalam <strong>Bahasa Indonesia</strong>.
            </p>
          </div>
        </div>

        <div
          class="bg-background dark:shadow-primary/20 rounded-2xl border p-8 shadow-lg"
        >
          <h2
            id="speakers"
            class="prose dark:prose-invert flex items-center gap-3 text-2xl font-bold"
          >
            <DynamicIcon
              icon="LuSquareUserRound"
              className="text-primary size-6"
            />
            <span>Narasumber</span>
          </h2>
          <div
            class="not-prose mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-2"
          >
            {
              speakers.map((speaker) => (
                <SpeakerCard
                  name={speaker.name}
                  title={speaker.title}
                  image={speaker.image}
                />
              ))
            }
          </div>
        </div>
      </article>
    </div>

    <aside class="lg:col-span-1">
      <div
        class="bg-background dark:shadow-primary/20 top-24 mt-8 w-full rounded-xl border p-6 font-light shadow-xl lg:sticky"
      >
        <h3 class="mb-4 text-xl font-bold">Detail Workshop</h3>
        <ul class="mb-4 space-y-3">
          <li class="flex items-center gap-3">
            <DynamicIcon
              icon="LuPresentation"
              className="text-primary h-5 w-5"
            />
            <span>Workshop luring interaktif (full-day)</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuCalendar" className="text-primary h-5 w-5" />
            <span>Kamis, 30 Oktober 2025</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuClock" className="text-primary h-5 w-5" />
            <span>09.00 â€“ 16.00 WIB</span>
          </li>
          <li class="flex items-center gap-3">
            <DynamicIcon icon="LuMapPin" className="text-primary h-5 w-5" />
            <span>FKM Universitas Diponegoro, Semarang</span>
          </li>
        </ul>

        <h4 class="mt-8 mb-4 text-lg font-semibold">Biaya Investasi</h4>
        <div class="space-y-3">
          <div
            class="bg-background flex items-center justify-between rounded-lg border p-4"
          >
            <div>
              <p
                class="flex items-center gap-2 font-bold text-gray-800 dark:text-gray-200"
              >
                <DynamicIcon icon="LuTicket" className="size-4" />
                <span>Umum</span>
              </p>
            </div>
            <p class="text-primary text-lg font-semibold">Rp. 1.500.000,-</p>
          </div>
        </div>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">
          <strong>Termasuk</strong>: materi workshop, seminar kit, sertifikat 3
          SKP Kemenkes, makan siang, dan coffee breaks.
        </p>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">
          <strong>Tidak termasuk</strong>: biaya transportasi, akomodasi, dan
          pengeluaran pribadi lainnya.
        </p>

        <div class="mt-6 text-center">
          <Button href="https://forms.gle/KavjksQW9cRhYkESA" target="_blank">
            Daftar Sekarang
          </Button>
          <p class="mt-2 text-sm">Batas Akhir Pendaftaran: 26 Oktober 2025</p>
        </div>
        <Image
          src={QrCode}
          alt="QR Code untuk Pendaftaran Workshop"
          class="mx-auto mt-4 w-48 rounded-lg"
        />
        <div class="mt-6 border-t pt-4 text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Informasi lebih lanjut:
          </p>
          <div class="mt-2 flex flex-col items-center gap-1">
            <a
              href="https://wa.me/6289692117516"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary inline-flex items-center gap-2 transition"
            >
              <DynamicIcon icon="FaWhatsapp" className="size-5" />
              <span class="link">Nisrina Widyasanti</span>
            </a>
            <a
              href="https://wa.me/6285210496880"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary inline-flex items-center gap-2 transition"
            >
              <DynamicIcon icon="FaWhatsapp" className="size-5" />
              <span class="link">Anita Pebrina</span>
            </a>
          </div>
        </div>
      </div>
    </aside>
  </section>
</Main>
